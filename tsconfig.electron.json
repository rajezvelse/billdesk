{
    "compilerOptions": {
        "allowJs": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist/electron",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "types": [
            "node"
        ]
    },
    "include": [
        "electron-src/**/*"
    ]
}