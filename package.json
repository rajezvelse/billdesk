{
  "name": "billdesk",
  "productName": "BillDesk",
  "version": "1.1.0",
  "description": "Automobile spares billing application",
  "author": "rajezvelse",
  "license": "MIT",
  "main": "dist/electron/electron.main.js",
  "homepage": "./",
  "engines" : { 
    "node" : "20.9.0"
  },
  "scripts": {
    "electron": "electron",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build:server": "tsc -p tsconfig.electron.json",
    "start:server": "yarn build:server && electron . --serve",
    "start:ui": "react-scripts start",
    "build:ui": "react-scripts build",
    "postbuild:ui": "node scripts/set-ui-build.js",
    "build": "yarn build:ui && yarn build:server",
    "package-win": "yarn build && electron-builder build --win --x64",
    "package-win32": "yarn build && electron-builder build --win --ia32",
    "electron:load-fixtures": "ts-node -P tsconfig.electron.json electron-src/fixtures/index.ts",
    "typeorm": "ts-node -P tsconfig.electron.json ./node_modules/typeorm/cli.js",
    "generate-migration": "ts-node -P tsconfig.electron.json ./node_modules/typeorm/cli.js migration:generate -d electron-src/migration.config.ts",
    "run-migration": "ts-node -P tsconfig.electron.json ./node_modules/typeorm/cli.js migration:run -d electron-src/migration.config.ts"
  },
  "build": {
    "productName": "BillDesk",
    "appId": "org.rajezvelse.BillDesk",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "index.html",
      "package.json"
    ],
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "icon.ico",
      "target": [
        "nsis",
        "msi"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "AppImage"
      ],
      "category": "Development"
    },
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "extends": null,
    "publish": {
      "provider": "github",
      "owner": "rajezvelse",
      "repo": "billdesk",
      "private": false
    }
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.1",
    "@types/electron": "^1.6.10",
    "@types/electron-builder": "^2.8.0",
    "@types/fs-extra": "^11.0.3",
    "@types/lodash": "^4.14.158",
    "@types/styled-components": "^5.1.1",
    "@types/yup": "^0.32.0",
    "electron": "^27.0.2",
    "electron-builder": "^24.6.4",
    "fs-extra": "^11.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@date-io/date-fns": "1.3.13",
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.56",
    "@material-ui/pickers": "^3.2.10",
    "@types/node": "^20.8.9",
    "@types/react": "^18.2.33",
    "@types/react-dom": "^18.2.14",
    "@types/recharts": "^1.8.16",
    "bcrypt": "^5.0.0",
    "date-fns": "^2.16.1",
    "electron-unhandled": "^4.0.1",
    "formik": "^2.1.5",
    "formik-material-ui": "^4.0.0-alpha.2",
    "loadash": "^1.0.0",
    "materialui-daterange-picker": "^1.1.92",
    "moment": "^2.29.1",
    "notistack": "^3.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1",
    "recharts": "^2.9.0",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.0.0",
    "styled-components": "^6.1.0",
    "typeorm": "^0.3.17",
    "yup": "^1.3.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
